<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="9.10dp">

    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:background="#DDDDDD"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProduct1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.50dp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant"/>

            <ImageView
                android:id="@+id/ivProduct2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.50dp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProduct3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.50dp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/cold_and_juices"/>

            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:visibility="gone"
                android:text="+1"
                android:textSize="23.50sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/llProductImages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/llProductImages">

        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="3.90dp"
            android:background="#DDDDDD"
            android:textColor="@color/black"
            android:textSize="14.30sp"/>

        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:layout_marginTop="3.90dp"
            android:background="#DDDDDD"
            android:textColor="#847F7F"
            android:textSize="14.30sp"/>

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="5.90dp"
            android:textSize="14.30sp"
            android:background="#DDDDDD"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:padding="5.20dp"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>